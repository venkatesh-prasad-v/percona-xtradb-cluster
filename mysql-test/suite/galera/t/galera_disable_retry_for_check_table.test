# ==== Purpose ====
# This test verifies that the server performs no retries are performed when
# CHECK TABLE query gets BF-aborted by a TOI running on the same table.
#
# ==== Implementation ====
#
# TODO:
#
# ==== References ====
# PXC-3226: Results from CHECK, ANALYZE from PXC server is causing the client
#           libraries to crash

--source include/have_debug_sync.inc
--source include/galera_cluster.inc
--source include/count_sessions.inc

# Create auxiliary connections
--connect node_1a, 127.0.0.1, root, , test, $NODE_MYPORT_1
--connect node_1b, 127.0.0.1, root, , test, $NODE_MYPORT_1

--echo [node_1a]
--connection node_1a
CREATE TABLE t1(i INT PRIMARY KEY);
# TODO: Add a case for partitioned tables.
# CREATE TABLE t1(i INT PRIMARY KEY)
# PARTITION BY RANGE (i) ( PARTITION p0 VALUES LESS THAN (2),PARTITION p1 VALUES LESS THAN (4));
SET DEBUG_SYNC="ha_innobase_check SIGNAL reached WAIT_FOR continue";
--send CHECK TABLE t1;

--echo [node_1b]
--connection node_1b
SET DEBUG_SYNC="now WAIT_FOR reached";

--echo [node_2]
--connection node_2
ALTER TABLE t1 ENGINE=InnoDB;
INSERT INTO t1 VALUES (1);

--connection node_1
--let $wait_condition = SELECT COUNT(*) = 1 FROM t1
--source include/wait_condition.inc
SET DEBUG_SYNC="now SIGNAL continue";
SET DEBUG_SYNC="RESET";

--connection node_1a
--error ER_LOCK_DEADLOCK
--reap
DROP TABLE t1;
--disconnect node_1a
--disconnect node_1b
--connection node_1
--source include/wait_until_count_sessions.inc
