#
# Test basic Galera operation
#

--source include/have_log_bin.inc
--source include/galera_cluster.inc

--connection node_1
--echo #node-1
SET SESSION wsrep_on=OFF;
RESET BINARY LOGS AND GTIDS;
SET SESSION wsrep_on=ON;

--connection node_2
--echo #node-2
SET SESSION wsrep_on=OFF;
RESET BINARY LOGS AND GTIDS;
SET SESSION wsrep_on=ON;

--connection node_1
--echo #node-1
CREATE TABLE t1 (f1 INT PRIMARY KEY);

SET SESSION wsrep_trx_fragment_size=1;
INSERT INTO t1 VALUES (1);

--connection node_2
--echo #node-2
SELECT COUNT(*) = 1 FROM t1;

SET SESSION wsrep_trx_fragment_size=1;
UPDATE t1 SET f1 = 2;

--let $gtid_executed_node2 = `SELECT @@global.gtid_executed;`

--connection node_1
--echo #node-1
SET SESSION wsrep_trx_fragment_size=0;

--connection node_2
--echo #node-2
SET SESSION wsrep_trx_fragment_size=0;

--connection node_1
--echo #node-1
SELECT COUNT(*) = 1 FROM t1 WHERE f1 = 2;

--disable_query_log
--eval SELECT '$gtid_executed_node2' = @@global.gtid_executed AS gtid_executed_equal;
--enable_query_log

--let $binlog_file = mysqld-bin.000001
--let $binlog_start = 125
--let $keep_gtid_events = 1
--source include/rpl/deprecated/show_binlog_events.inc

--connection node_2
--echo #node-2
# Perform causal wait
SELECT 1 FROM DUAL;
--let $binlog_file = mysqld-bin.000001
--let $binlog_start = 125
--let $keep_gtid_events = 1
--source include/rpl/deprecated/show_binlog_events.inc

DROP TABLE t1;
